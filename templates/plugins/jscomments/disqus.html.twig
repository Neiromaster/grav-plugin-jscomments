<div id="jscomments">
    <div id="disqus_thread"></div>

    {% set language = grav.language.getActive ?: default_lang %}

    <script type="text/javascript">
        var disqus_config = function () {
            this.language = '{{ language | e('js') }}';
        };
        var disqus_shortname  = '{{ shortname | e('js') }}'; // required: replace example with your forum shortname
        var disqus_title      = '{{ title | default(page.title) | e('js') }}';
        var disqus_identifier = '{{ identifier | default(page.url(true)) | e('js') }}';
        var disqus_url        = '{{ url | default(page.url(true)) | e('js') }}';
        (function() {
            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
            dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
        })();
    </script>
    <noscript>{{ 'PLUGIN_JSCOMMENTS.DISQUS.NOSCRIPT' | t }}</noscript>
    {{ 'PLUGIN_JSCOMMENTS.DISQUS.COPYRIGHT' | t }}

    <script type="text/javascript">
      /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
      var disqus_shortname = '{{ shortname }}'; // required: replace example with your forum shortname

      /* * * DON'T EDIT BELOW THIS LINE * * */
      (function () {
        var s = document.createElement('script'); s.async = true;
        s.type = 'text/javascript';
        s.src = '//' + disqus_shortname + '.disqus.com/count.js';
        (document.getElementsByTagName('HEAD')[0] || document.getElementsByTagName('BODY')[0]).appendChild(s);
      }());
    </script>

</div>
